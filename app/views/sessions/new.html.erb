<h1>Log in</h1>
<br>

<%= form_with(scope: :session, url: login_path) do |form| %>
 
    <div class="field">
      <%= form.label :username, class: "label" %><br/>
      <%= form.text_field :username, class: "input" %>
    </div>
     
    <div class="field">
      <%= form.label :password, class: "label" %><br/>
      <%= form.password_field :password, class: "input" %>
    </div>
     
    <div class="actions">
      <%= form.submit "Log in", class: "button is-success" %>
      <%= link_to "Sign Up", "/signup", class: "button is-success", class: "button is-success" %>
    </div>
     
    <% end %>
    