<% content_for :title do %>
  PO Number: <%= @entry.po_number %> &ndash; <%= @entry.item %> <!-- Make this @entry.item a category association -->
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-primary">
      <p class="panel-heading">
        PO Number: <%= @entry.po_number %>
      </p>

      <div class="panel-block">
        Number of items: <%= @entry.number_of_items %>
      </div>

      <div class="panel-block">
        PO Number: <%= @entry.po_number %>
      </div>

      <div class="panel-block">
        PO Date: <%= @entry.po_date %>
      </div>

      <div class="panel-block">
        Invoice Date: <%= @entry.invoice_date %>
      </div>

      <div class="panel-block">
        Serial Number: <%= @entry.serial_number %>
      </div>

      <div class="panel-block">
        Cost: $<%= @entry.cost %>
      </div>

      <div class="panel-block">
        Client Acronym: <%= @entry.client_acronym %>
      </div>

      <div class="panel-block">
        Install Date:  <%= @entry.install_date %>
      </div>

      <div class="panel-block">
        Notes:  <%= @entry.notes %>
      </div>

    </nav>

    <div class="columns is-mobile">
     <div class="column">
      <%= link_to "Home", entries_path, class: "button is-gray" %>
      <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
      <%= link_to "Delete", entry_path(@entry), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button is-gray" %>
    </div>
  </div>
 </div>
</div>
